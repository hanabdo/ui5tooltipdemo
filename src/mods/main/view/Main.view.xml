<core:View
    controllerName="sampleapp.mods.main.controller.Main"
    xmlns="sap.m"
    xmlns:custom="sampleapp.controls"
    xmlns:mvc="sap.ui.core.mvc"

    xmlns:c="sap.ui.commons"
    xmlns:ch="sap.ca.ui.charts"
    xmlns:core="sap.ui.core"
    xmlns:d="sap.viz.ui5.data"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:l="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:sc="sap.suite.ui.commons"
    xmlns:ui="sap.ca.ui"
    xmlns:unified="sap.ui.unified"
    xmlns:vc="sap.viz.ui5.controls"
>
  <Page showFooter="true">
    <content>
      <Label width="100%" text=" "/>
      <Label id="label1" textAlign="Center" width="100%" text="{gSettings>/mainPageValue}"/>
      <Label width="100%" text=" "/>
      <Label id="label2" textAlign="Center" width="100%" text="{gSettings>/mainPageValue}"/>
      <Label width="100%" text=" "/>
      <Label id="label3" textAlign="Center" width="100%" text="{gSettings>/mainPageValue}"/>
      <Label width="100%" text=" "/>
      <Label id="label4" textAlign="Center" width="100%" text="{gSettings>/mainPageValue}"/>
      <Label width="100%" text=" "/>
      <Label id="label5" textAlign="Center" width="100%" text="{gSettings>/mainPageValue}"/>
    </content>

    <footer>
      <Bar>
        <contentMiddle>
          <Label text="Main Page"/>
        </contentMiddle>

        <contentRight>
          <Button
            text="show tooltip"
            press="onShowTooltip"
          />
          <Button
              text="Go in details"
              iconFirst="false"
              icon="sap-icon://arrow-right"
              press="navToDetail"
          />
        </contentRight>
      </Bar>
    </footer>

  </Page>
</core:View>
